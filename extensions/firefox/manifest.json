{
    "manifest_version": 3,
    "name": "EngineBlock",
    "description": " Remove vehicles cards on lacentrale.fr containing vehicles with specified engines and also ads containers",
    "homepage_url": "https://github.com/Hogwai/EngineBlock",
    "version": "1.0.0",
    "browser_specific_settings": {
        "gecko": {
            "id": "engineblock@lw.mozmail.com",
            "strict_min_version": "109.0",
            "data_collection_permissions": {
                "required": [
                    "websiteContent"
                ]
            }
        }
    },
    "icons": {
        "16": "icon_16.png",
        "48": "icon_48.png",
        "128": "icon_128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.lacentrale.fr/*"
            ],
            "run_at": "document_idle",
            "js": ["EngineBlock.user.js"]
        }
    ],
    "options_ui": {
        "page": "popup.html",
        "open_in_tab": true
    },
    "permissions": [
        "storage", 
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html"
    }
}